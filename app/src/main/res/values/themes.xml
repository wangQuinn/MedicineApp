<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.BookLibraryApp" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorAccent">@color/mutedPurple</item>
        <item name = "colorPrimaryDark"> @color/mutedOrange </item>
        <item name="colorPrimary"> @color/cream</item>
        <item name="android:windowBackground">@color/cream</item>
        <item name= "android:fontFamily"> monospace</item>
        <item name = "android:textAllCaps" > false </item>



    </style>

    <style name="noActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/mutedYellow</item>
        <item name="colorAccent">@color/mutedPurple</item>
        <item name = "colorPrimaryDark"> @color/mutedOrange </item>
        <item name="colorPrimary"> @color/mutedYellow</item>
        <item name="android:windowBackground">@color/cream</item>
        <item name= "android:fontFamily"> monospace</item>
        <item name = "android:textAllCaps" > false </item>

    </style>





    <style name="ButtonStyle">

        <item name="android:textColor">@color/cream</item>
        <item name ="android:layout_width" > match_parent </item>
        <item name ="android:layout_height" > 50dp </item>
        <item name ="android:textStyle" > normal </item>
        <item name ="android:textSize" > 17sp </item>
        <item name = "android:fontFamily"> monospace</item>
        <item name = "android:textAllCaps" > false </item>
        <item name ="android:backgroundTint" > @color/black </item>
        <item name = "android:gravity"> center</item>



    </style>

    <style name="Title1" parent = "Theme.Material3.DayNight">
        <item name = "android:textSize"> 40sp </item>
        <item name = "android:textColor"> @color/darkBlue </item>
        <item name = "android:textStyle"> bold </item>
        <!--<item name = "android:textAllCaps"> true </item>-->


    </style>

    <style name="DayOfWeekTextView">
        <item name = "android:textStyle"> bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor"> @color/black </item>
        <item name = "android:alpha"> 0.5 </item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>